# Matching Algorithm (Needs work)

def tags_selected(user_tags):
    for x in user_tags.items():
        return x



def matches_counter(tags_selected):
    tags = tags_selected(user_tags)
    match_counter = 0
    for y in tags:
        if y in user_tags.tags():
            match_counter +=1
            continue
        return y    

            
tags_selected(user_tags)
matches_counter(tags_selected)

